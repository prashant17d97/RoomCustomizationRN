<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/white</item> <!-- or transparent -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="CustomTopAppBar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">#FFFFFF</item>
        <item name="titleTextColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

</resources>